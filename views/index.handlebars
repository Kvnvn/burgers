<div class="jumbotron">
  <div class="container">
<div class="row">
    <h1>EAT-DURR-BURGER!</h1>
</div>
<div class="row">
    <div class="col">
        <section class="container my-5">
            <h5>Enter burger you want to devour!</h5>
            <form action="api/burgers" method="POST">
                <div class="input-group mb-3">
                    <input name="burger_name" class="form-control" placeholder="enter burger and look below to choose which to eat first!"
                        aria-label="Insert Burger name">
                    <div class="input-group-append">
                        <button class="btn btn-outline-success" type="submit">Order Up!</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
  </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="container">
            <h2>EAT IT?</h2>
            <div class="top-bun">
                <img src="/images/top-bun.png">
            </div>
            <div class="patties">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <p>{{burger_name}}<button data-id="{{id}}"
                            class="devoured btn btn-warning btn-sm ml-4 mt-1">EAT IT!</button>
                    </p>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="bottom-bun">
                <img src="/images/bottom-bun.png">
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <h2>
            FINISHED!
        </h2>
         <div class="top-bun">
                <img src="/images/eaten-burger.png">
            </div>
        <div class="patties">
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <p>{{burger_name}}</p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="bottom-bun">
                <img src="/images/eaten-top.png">
            </div>
    </div>
</div>